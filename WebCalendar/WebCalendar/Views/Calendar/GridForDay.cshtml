@{
    Layout = null;
}

<div class="row">
    <div style="text-align: center"
         ng-bind-template="{{currentDate | dayName}}, {{currentDate | month}}/{{currentDate | date}}">
    </div>
</div>

<div style="overflow: scroll; width: 100%; height: 420px;">
<div class="table-responsive">
    <table class="table table-bordered">

        <tr ng-repeat="r in dataForGridDay">

            <td ng-repeat="e in r" style="width: 100px" ng-style={'background-color':e.color} class="{{e.class}}" data-hour="{{e.hour}}" data-id="{{e.id}}" data-title="{{e.titleAttr}}" ng-click="eventInfo(e.id)">
                <span>{{e.title}}</span>
            </td>

        </tr>

    </table>
</div>

</div>