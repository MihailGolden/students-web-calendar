@model WebCalendar.Domain.Aggregate.Calendar.Calendar
@{
    ViewBag.Title = "Calendar";
}
<head>
    <style>
        #feedback {
            font-size: 1.4em;
        }

        .selectable .ui-selecting {
            background: lightblue;
        }

        .selectable .ui-selected {
            background: lightskyblue;
            color: white;
        }

        .selectable {
            list-style-type: none;
            margin: 0;
            padding: 0;
            width: 60%;
        }

            .selectable li {
                margin: 3px;
                padding: 0.4em;
                font-size: 1.4em;
                height: 18px;
            }

        .ui-selecting {
            background: red;
        }

        .ui-selected {
            background: #6f6;
        }
    </style>
    <script src="~/Scripts/app.js" type="text/javascript"></script>
</head>
<div ng-app="calendarApp" ng-controller="calendarCtrl">
    <nav clas="navbar navbar-default">
        <!--Calendar navbar-->
        <div class="row">
            <div class="col-lg-2">
                <span class="calendarword">@Model.Title</span>
            </div>
            <div class="col-lg-2">

            </div>
            <div class="col-lg-2">
                <p class="navbar-text navbar-left"><h6 id="month"></h6>March, 2017</p>
            </div>
            <div class="col-lg-6">
                <div class="btn-group" role="group" aria-label="...">
                    <button class="btn btn-default">Today</button>
                    <div class="btn-group" role="group" aria-label="...">
                        <button type="button" class="btn btn-default" ng-click="calendar.subtractDays()"><</button>
                        <button type="button" class="btn btn-default" ng-click="calendar.addDays()">></button>
                    </div>
                    <button type="button" class="btn btn-default" ng-click="nav('GridForDay')">Day</button>
                    <button type="button" class="btn btn-default" ng-click="nav('GridForWeek')">Week</button>
                    <button type="button" class="btn btn-default" ng-click="nav('GridForMonth')">Month</button>
                </div>
                <button type="submit" class="btn btn-default">Notification</button>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row content">
            <div class="col-sm-3 sidenav">
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-8">
                        <button class="btn btn-default">Create</button>
                    </div>
                    <div class="col-md-2"></div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div id="datetimepicker12"></div>
                    </div>
                </div>

                <script type="text/javascript">
                    $(function () {
                        $('#datetimepicker12').datetimepicker({
                            inline: true,
                            sideBySide: false
                        });
                    });
                </script>
            </div>
            <!-- Modal -->
            <div class="modal fade" id="modal-new-event" role="dialog">
                <div class="modal-dialog modal-sm">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Event</h4>
                        </div>
                        <input required id="event-title" type="text"><br>

                        <label>When:</label>
                        <div ng-bind-template="{{calendar.getDayName()}}, {{calendar.getDate()}} {{calendar.getMonthName()}}, {{calendar.dayTimePeriod.startHour}} - {{calendar.dayTimePeriod.endHour}}"></div>

                        <div class="modal-footer">
                            <button id="modal-btn-sendEvent" type="button" class="btn btn-default" data-dismiss="modal" ng-click="sendEventInfo()">Create</button>
                            <button id="modal-btn-editEvent" type="button" class="btn btn-default" data-dismiss="modal">Edit</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Modal -->
            <!--<div ng-include="displayGrid()"></div>-->
            <div class="col-sm-9 selectable">
                <div ng-include="filePath()"></div>
            </div>
        </div>
    </div>
</div>

